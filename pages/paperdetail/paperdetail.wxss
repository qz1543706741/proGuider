
.container-body{
margin-bottom: 10rpx;
}
.group-body-text{
  font-size: 27rpx; 
  margin-left: 10rpx;
  margin-right: 5rpx;
  word-wrap:break-word; 
}
.top{
  position: relative;
  z-index: 1;
}
.top-title{
  position: absolute;
  z-index: 2;
  left:60rpx;
  top: 345rpx;
  color: white;
  font-weight: bold;
  font-size: 40rpx;
}
.header{
  height: 500rpx;
  width: 100%;
}

.group-header{
  border-radius: 10rpx; 
  display: flex;
  flex-flow: row nowrap;
  justify-content:  space-between;
  height: 100rpx;
}
.group-header-content{
  display:flex;
  align-items:center;
  color:#7B7B7B;
  font-weight: bold;
  font-size: 25rpx;
 
}



.group-body{
display:flex;
flex-direction: column;
align-items:center;
height: 60rpx;
width: 200rpx;
margin-top: 20rpx;
margin-left: 25rpx;
border-radius: 10rpx;
box-shadow: 0px 2rpx 5rpx #888888;
background-color: #00BFFF;
}

.group-body-title{
  color: white;
 margin-top: 10rpx;
 margin-left: 75rpx;
  font-size: 30rpx;
  display: table; 
  width: 100%; 
  border-collapse: collapse;
}

.group-body-content{
 margin-left:25rpx; 
 margin-right: 25rpx;
 border:1rpx solid #00BFFF;
 border-radius:0rpx 10rpx 10rpx 10rpx;
}

.group-body-item{
 margin: 20rpx;
 font-size: 30rpx;
 text-indent: 60rpx;
 text-align: left;
 line-height: 45rpx;
}
 

   

 
