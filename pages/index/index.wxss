/**index.wxss**/
.selection{
   width: 100%;
  
}
.header{
  margin-top: 5rpx;
  height:70rpx;
  display: flex;
  align-items: center;
  border-radius:10rpx;
  background-color: #00BFFF;
  position: relative;
  box-shadow: 0px 2rpx 5rpx #888888;
}
.index-banner{
  width: 100%;
}

.text_tutor{
  color: white;
  font-size: 35rpx;
  margin-left: 25rpx;
}

.text_more{
  color: white;
  font-size: 20rpx;
  position: absolute;
  right:65rpx;
}

.header_image{
  height: 30rpx;
  width: 30rpx;
  position: absolute;
  right: 30rpx;
}

.list-item{
  margin-top: 15rpx;
  border-radius:5rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  box-shadow: 0px 2rpx 5rpx #888888;
  background-color: #F7F7F7;
}

.list-item-image{
  margin:10rpx;
  width: 155rpx;
  height: 155rpx;
  display: flex;
  border-radius:5rpx;
 border:1rpx solid #999999;
 box-shadow: 0px 2rpx 2rpx #888888;
}

.list-item-image-content{
  margin: auto;
  height: 155rpx;
  width: 155rpx;
}

.list-item-content{
   display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
  margin-top: 10rpx;
  height: 155rpx;
  width: 555rpx;
  border-radius:5rpx;
  border:1rpx solid #999999;
  box-shadow: 0px 2rpx 2rpx #888888;
}

.list-item-content-text{
  margin-left: 30rpx;
  overflow: hidden;
  font-weight: normal;
  font-style: normal;
  font-size: 25rpx;
  color:#666666;
}


.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 10px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.service-city-text{
  margin-left: 20rpx;
}
